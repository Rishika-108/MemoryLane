{
"manifest_version": 3,
"name": "Memory Lane Capture",
"version": "0.1.0",
"description": "Auto-capture pages (URL, title, selection, screenshot) and send to Memory Lane backend.",
"permissions": [
"tabs",
"activeTab",
"scripting",
"storage",
"alarms",
"notifications"
],
"host_permissions": [
"<all_urls>"
],
"background": {
"service_worker": "background.js"
},
"action": {
"default_popup": "popup.html",
"default_title": "Memory Lane"
},
"content_scripts": [
{
"matches": ["<all_urls>"],
"js": ["content_script.js"],
"run_at": "document_idle"
}
]
}